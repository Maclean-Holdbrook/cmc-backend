# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Supabase PostgreSQL)
# For Supabase, use the Transaction pooler connection string
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://username:password@your-pooler-hostname.pooler.supabase.com:6543/postgres?pgbouncer=true"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS Configuration
# For local development
CORS_ORIGIN=http://localhost:5173
# For production (Vercel frontend), add your frontend URL:
# CORS_ORIGIN=https://your-frontend-app.vercel.app

# Twilio SMS Configuration (optional - for admin SMS notifications)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Resend Email Configuration (required for email notifications)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
# For testing, use: onboarding@resend.dev
# For production, verify your domain at resend.com/domains and use: noreply@yourdomain.com
RESEND_FROM_EMAIL=onboarding@resend.dev
# Email address that will receive notifications when using test domain
ADMIN_EMAIL=your-verified-email@example.com

# Other Configuration
API_VERSION=v1
